        <Label Content="Логин" HorizontalAlignment="Left" Margin="37,107,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White" FontWeight="Bold"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="36,394,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White" FontWeight="Bold"/>
