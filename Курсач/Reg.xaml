        <TextBox Style="{DynamicResource TextBoxStyle5}" x:Name="pass2" HorizontalAlignment="Left" Margin="37,528,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="22" BorderBrush="{x:Null}"/>
        <Button Template="{DynamicResource ButtonTemplate1}" x:Name="Regist_Sing" Style="{DynamicResource ButtonStyle1}" Content="Регистрация" HorizontalAlignment="Left" Margin="26,624,0,0" VerticalAlignment="Top" FontSize="22" Height="50" Width="159" Click="Button_Click" Background="#FFF1F1F1"/>
        <Label MouseDown="Singln_MouseDown" x:Name="Sing4" Margin="272,39,146,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.523,0.342" Foreground="#FF565656" Content="/ Войти" Height="45"/>
