        <Grid Margin="10,47,833,10" x:Name="TrueOpl">
            <Border BorderBrush="Black" BorderThickness="1">
                <Label Content="Название:                                  Цена: " Margin="9,9,9,352"/>

            </Border>
        </Grid>
        <Grid Margin="282,47,556,10" x:Name="FalseOpl">
            <Border BorderBrush="Black" BorderThickness="1">
                <Label Content="Название:                                  Цена: " Margin="9,9,9,352"/>
            </Border>
        </Grid>
        <Label Content="Последняя купленная книга" HorizontalAlignment="Left" Margin="557,13,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="250" Margin="564,61,0,0" VerticalAlignment="Top" Width="173"/>
        <Label x:Name="q" Content="Книга" HorizontalAlignment="Left" Margin="736,61,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.016,-0.254" FontSize="22" FontWeight="Bold"/>
        <Label x:Name="_2" Content="Автор: " HorizontalAlignment="Left" Margin="736,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.016,-0.254" FontSize="14" Foreground="#FF5F5F5F"/>
