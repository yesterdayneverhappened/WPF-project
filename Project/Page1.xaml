        <Label x:Name="w_Copy" Content="Автор: " HorizontalAlignment="Left" Margin="786,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.016,-0.254" FontSize="14" Foreground="#FF5F5F5F"/>
        <Label x:Name="e_Copy" Content="Жанр: " HorizontalAlignment="Left" Margin="782,129,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.016,-0.254" FontSize="14" Foreground="#FF5F5F5F"/>

